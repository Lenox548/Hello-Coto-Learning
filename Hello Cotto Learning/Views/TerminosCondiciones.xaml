<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hello_Cotto_Learning.Views.TerminosCondiciones"
             xmlns:vm="clr-namespace:Hello_Cotto_Learning.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource Background}">

    <ContentPage.BindingContext>
        <vm:TerminosCondicionesViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="「Términos y Condiciones」"
                FontSize="17"
                TextColor="{DynamicResource SecondColor}"
                Padding="0,20,0,0"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>